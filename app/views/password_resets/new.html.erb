<div class="container">
  <div class="row sessionBox">
    <div class="col-md-6 col-md-offset-3 margin-lr-auto">
      <h1>パスワード再設定</h1>
      <%= form_with(url: password_resets_path, scope: :password_reset,
                      local: true) do |f| %>
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.submit "Submit", class: "btn btn-primary" %>
      <% end %>
      <p>New user? <%= link_to "Sign up now!", new_user_path %></p>
    </div>
  </div>
</div>
